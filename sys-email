#!/usr/bin/env sh
#
# pbrisbin 2013
#
###
{
  cat << EOF
Subject: ${1:-System email}
Date: $(date -u +'%a, %d %h %Y %T +0000')
From: Admin <admin@pbrisbin.com>
To: pbrisbin@gmail.com

Hello,

EOF

  cat # stdin
  cat << EOF

Thanks,
Admin

EOF

} | /usr/sbin/sendmail -f 'admin@pbrisbin.com' pbrisbin@gmail.com
